<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:showIn="@layout/activity_main2"
    tools:context="rs.project4420.connect4.Main2ActivityFragment">

    <LinearLayout android:id="@+id/main_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView android:text="Connect 4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textSize="48dp"/>

        <Button
            android:id="@+id/play_friend_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play with friend on this device"/>

        <Button
            android:id="@+id/play_AI_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play against AI"/>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout android:id="@+id/signed_in_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/multiplayer_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create multiplayer match"/>

            <Button
                android:id="@+id/matches_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View matches"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
